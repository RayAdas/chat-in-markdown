{
  "name": "chat-in-markdown",
  "displayName": "Chat in Markdown",
  "version": "0.0.1",
  "publisher": "WindyAwaki",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:extension.sayHello"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chat-in-markdown.sentChat",
        "title": "Sent Chat"
      }
    ],
    "keybindings": [
      {
        "command": "chat-in-markdown.sentChat",
        "key": "Ctrl+Alt+B"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Chat in Markdown Configuration",
      "properties": {
        "chat-in-markdown.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for OpenAI"
        },
        "chat-in-markdown.baseURL": {
          "type": "string",
          "default": "https://ark.cn-beijing.volces.com/api/v3",
          "description": "Base URL for OpenAI"
        },
        "chat-in-markdown.model": {
          "type": "string",
          "default": "ep-20250224162638-lk6m9",
          "description": "Model for OpenAI"
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}

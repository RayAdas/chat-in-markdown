{
  "name": "chat-in-markdown",
  "displayName": "Chat in Markdown",
  "icon": "images/icon.png",
  "version": "0.0.5",
  "keywords": [],
  "description": "",
  "publisher": "WindyAwaki",  
  "author": "WindyAwaki",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/RayAdas/chat-in-markdown.git"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "openai": "^4.85.4"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chat-in-markdown.sendChat",
        "title": "Send Chat",
        "when": "editorLangId == markdown",
        "icon": {
          "light": "./images/for-light.svg",
          "dark": "./images/for-dark.svg"
        }
      },
      {
        "command": "chat-in-markdown.resetApiKey",
        "title": "Chat in Markdown: Reset API Key"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Chat in Markdown Configuration",
      "properties": {
        "chat-in-markdown.baseURL": {
          "type": "string",
          "default": "https://api.deepseek.com/v1",
          "description": "Base URL for OpenAI API"
        },
        "chat-in-markdown.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "Model for OpenAI API"
        },
        "chat-in-markdown.singleFileMode": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, use the whole file as one conversation and use H1 headings as roles. In normal mode, H1 separates conversations and H2 separates roles."
        }
      }
    },
    "keybindings": [
      {
        "command": "chat-in-markdown.sendChat",
        "when": "editorLangId == markdown",
        "key": "Ctrl+Alt+C"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "chat-in-markdown.sendChat",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
